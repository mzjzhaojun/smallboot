<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhengqing.cms.mapper.CmsJobCategoryMapper">

    <select id="selectDataPage" resultType="com.zhengqing.cms.model.vo.CmsJobCategoryPageVO">
        SELECT
        *
        FROM cms_job_category
        <where>
            is_deleted=0
            <if test="filter.deptId!=null">
                AND dept_id = #{filter.deptId}
            </if>
            <if test="filter.name!=null and filter.name!=''">
                AND name LIKE CONCAT( '%', #{filter.name} , '%' )
            </if>
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>

    <select id="selectDataList" resultType="com.zhengqing.cms.model.vo.CmsJobCategoryListVO">
        SELECT
        id, name
        FROM cms_job_category
        <where>
            is_deleted=0 AND status=1
            <if test="filter.deptId!=null">
                AND dept_id = #{filter.deptId}
            </if>
            <if test="filter.name!=null and filter.name!=''">
                AND name LIKE CONCAT( '%', #{filter.name} , '%' )
            </if>
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>

</mapper>
